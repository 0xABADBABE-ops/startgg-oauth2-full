{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src",
    "__tests__",
    "jest.setup.ts"
  ],
  "exclude": [
    "examples"
  ]
}
